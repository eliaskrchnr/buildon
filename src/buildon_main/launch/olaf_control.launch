<launch>
  <rosparam command="load" file="$(find buildon_main)/config/olaf_control.yaml" ns="olaf_diff_drive_controller" />
  <rosparam command="load" file="$(find buildon_main)/config/joints.yaml" ns="olaf_joint_state_controller" />

  <node name="olaf_controller_spawner" pkg="controller_manager" type="spawner" args="olaf_diff_drive_controller"/>
  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/cmd_vel"/>
  </node>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

</launch>
